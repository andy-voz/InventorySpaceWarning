<GuiXml>
  <Controls>
    <TopLevelControl name="InventoryWarningIndicator" layer="DL_CONTROLS" mouseEnabled="true" movable="true" clampedToScreen="true">
      <Dimensions x="60" y="60" />
      <Anchor point="BOTTOMLEFT" relativeTo="GuiRoot" offsetX="150" offsetY="-10" />
 
      <Controls>
        <Texture name="$(parent)Icon" textureFile="InventoryWarning/res/sack-icon.dds">
            <Anchor point="CENTER" />
            <Dimensions x="50" y="50"/>
        </Texture>
        <Label name="$(parent)Label" width="10" height="10" font="ZoFontWinH3" inheritAlpha="true" color="FFFFFF"
            wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="">
          <Anchor point="CENTER" relativeTo="$(parent)Icon" relativePoint="BOTTOMRIGHT" offsetX="-5" offsetY="-5"/>
        </Label>
      </Controls>
    </TopLevelControl>
  </Controls>
</GuiXml>